# OpenProject MCP Server - Environment Variables Example
# Copy this file to .env and fill in your values

# Required: OpenProject instance URL
OPENPROJECT_URL=https://your-instance.openproject.com

# Required: OpenProject API key (get from Account Settings > Access tokens)
OPENPROJECT_API_KEY=your-api-key-here

# Optional: HTTP proxy (if your network requires it)
# OPENPROJECT_PROXY=http://proxy.company.com:8080

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Test connection on startup (true/false)
TEST_CONNECTION_ON_STARTUP=false
